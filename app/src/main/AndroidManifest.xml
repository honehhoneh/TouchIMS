<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mendoza.touchims">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/touchims001"
        android:label="@string/app_name"
        android:roundIcon="@drawable/touchims001"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".views.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".views.FacultyProfileActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--android:screenOrientation="landscape"-->

        <activity
            android:name=".views.RegisterUser"
            android:label="Register New User" />

        <activity
            android:name=".views.StudentProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--android:screenOrientation="landscape"-->

    </application>
</manifest>