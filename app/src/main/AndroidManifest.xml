<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mendoza.touchims">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/touchims1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/touchims1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".views.FacultyProfileActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.ChangeRoomRequestActivity" />
        <activity
            android:name=".views.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.RegisterUser"
            android:label="Register New User" />
        <activity
            android:name=".views.StudentProfileActivity"
            android:label="@string/title_activity_student_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>